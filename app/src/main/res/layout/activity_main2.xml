<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#00BCD4">

        <ImageView
            android:id="@+id/arrback"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            />
        <TextView
            android:id="@+id/back"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="23dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:layout_marginLeft="80dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_settings_24"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="3dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="#00BCD4">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/custom_profile"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/ic_baseline_person_24" />
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Name"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="125   Friend"
                android:textSize="25dp"
                android:textColor="@color/white"/>
            <View
                android:layout_marginTop="26dp"
                android:layout_width="3dp"
                android:layout_height="55dp"
                android:background="@color/white" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="250   Followers"
                android:textSize="25dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="email: tronga2@gmail.com"
            android:textSize="20dp"
            android:textColor="#00BCD4"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#00BCD4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Phone: +84359206687"
            android:textSize="20dp"
            android:textColor="#00BCD4"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#00BCD4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Skype: me007"
            android:textSize="20dp"
            android:textColor="#00BCD4"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#00BCD4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Web: cssauthor.com/"
            android:textSize="20dp"
            android:textColor="#00BCD4"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>